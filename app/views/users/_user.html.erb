<div class="row"> 
  <div class="col s12 m12">
    <div class="card horizontal">
      <div class="card-image col s2">
        <% if user.image_have? %>
          <%= image_tag rails_blob_path(user.image), class:"profile-img" %>
        <% else %>
          <%= image_tag 'image1.jpg' %>
        <% end %>
      </div>
      <div class="card-stacked col s10">
        <div class="card-content">
          <h5><%= user.nickname %></h5>
          <p><%= user.text %></p>
        </div>
        <div class="card-action">
          <%= link_to "show more", user_path(user.id) %>
        </div>
      </div>
    </div>
  </div>
</div>