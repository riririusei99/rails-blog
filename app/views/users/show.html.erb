<div class="row"> 
  <div class="col s12 m12">
    <h4 class="header">Profile</h4>
    <div class="divider"></div>
    <%= render partial: "users/user", collection: [@user] %>
    <% if @user.your_account?(current_user)%>
    <p><i class="small material-icons">account_box</i><%= link_to "Edit your profile", edit_user_path(current_user) %></p>
    <% end%>
    <h4 class="header">Post list</h4>
    <div class="divider"></div>
    <%= render partial: "posts/post", collection: @posts %>
    <div class="divider"></div>
    <div class="row center-align">
      <%= paginate(@posts) %>
    </div>
  </div>
</div>
