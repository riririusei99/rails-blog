  <div class="row">
    <div class="col s12 m12">
      <div class="card blue-text text-darken-2">
        <div class="card-content">
          <span class="card-title"><%= post.title %></span>
          <h6 class="left-align grey-text text-lighten-1"><%= post.created_at %></h6>
          <p class="grey-text text-darken-2" ><%= post.post %></p>
        </div>
        
        <div class="card-action right-align ">
          <%= link_to "Show", post_path(post), class: "waves-effect waves-light btn blue lighten-1" %>
          <% if  user_signed_in? && post.your_post?(current_user) %>
            <%= link_to "Edit", edit_post_path(post), class: "waves-effect waves-light btn blue lighten-1"  %>
            <%= link_to "Delete", "/posts/#{post.id}", method: :delete, data: { confirm: '投稿を削除します。よろしいですか？' }, class: "waves-effect waves-light btn blue lighten-1"  %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
