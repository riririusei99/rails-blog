<div class="row">
  <div class="col s12 m12">
      <h4><%= @post.title %></h4>
  </div>
  <div class="col s12 m12">
    <div class="divider"></div>
    <!--card contents-->
    <div class="row">
      <div class="col s12 m12">
        <div class="card ">
          <div class="card-content white-text">
            <!--<span class="card-title">Card Title</span>-->
            <p class="grey-text text-darken-2 flow-text"><%= @post.post %></p>
          </div>
          <div class="card-action">
            <% if  user_signed_in? && @post.your_post?(current_user) %>
              <%= link_to "Edit", edit_post_path(@post), class: "waves-effect waves-light btn blue lighten-1"  %>
              <%= link_to "Delete", "/posts/#{@post.id}", method: :delete, data: { confirm: '投稿を削除します。よろしいですか？' }, class: "waves-effect waves-light btn blue lighten-1"  %>
            <% end %>
            <h6 class="right-align grey-text text-lighten-1"><%= "created: #{@post.created_at} " %></h6>
          </div>
        </div>
      </div>
    </div>
    <!-- card_end -->
    <h4>Posted by</h4>
    <div class="divider"></div>
    <%= render partial: "users/user", collection: [@post.user] %>
  </div>
</div>