<div class="container"> <!-- 幅とmargin指定する -->
  <div class="row">
    <form class="col s12">
      <div class="row">
        <%= form_for(@post) do |f| %>
          <div class="input-field col s6">
            <%= f.text_field :title, placeholder: "Please input Title", class: "validate"  %>
            <!--<input placeholder="sample title" id="Title" type="text" class="validate">-->
            <label for="Title">Title</label>
          </div>
          <div class="input-field col s12">
            <%= f.text_area :post, placeholder: "What's are you writing?", class: "materialize-textarea" %>
            <label >Text</label>
          </div>
          <div class="input-field col s12">
            <button class="btn waves-effect waves-light" type="submit" name="action">
              <i class="material-icons right">send</i>
              <%= f.submit "Post it!", ckass:"btn waves-effect waves-light" %>
            </button>
          </div>
        <% end %>
      </div>
    </form>
  </div>
</div>