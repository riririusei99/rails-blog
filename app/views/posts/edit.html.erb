<div class="row">
    <%= form_for @post do |f|  %>
      <div class="input-field col s6">
        <%= f.text_field :title, placeholder: @post.title , class: "validate" %>
        <label for="Title">Title</label>
      </div>
      <div class="input-field col s12">
        <%= f.text_area :post, placeholder: @post.post , class: "materialize-textarea" %>
        <label for="textarea1">Post</label>
      </div>
      <div class="input-field col s12">
        <button class="btn waves-effect waves-light" type="submit">Update Post
          <i class="material-icons right">send</i>
        </button>
      </div>
    <% end %>
</div>
